public class Menu {


    public void menu() {

        int menuSelect;

         do {
             System.out.println("Bem vindo");
             System.out.println("Que menu pretende obter?");
             System.out.println(" [1]-Multiplicação" +
                     " [2]-Soma" +
                     " [3]-Sair");

             Scanner input = new Scanner(System.in);

             menuSelect = input.nextInt();


             switch (menuSelect) {
                 case 1:
                     System.out.println("Bem vindo a soma...");
		     Multiplica multiplica = new Multiplica();
		     multiplica();
                     break;
                 case 2:
                     System.out.println("Bem vindo a multiplicação...");
		     Somar soma = new Somar();
		     soma();
		     break;
                 case 3:
                     System.out.println("Abreijos\n"+
                                        "Fizer everywhere");
             }
        }while (menuSelect != 3 || menuSelect >3);
    }
}
